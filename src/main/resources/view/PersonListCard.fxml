<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      style="-fx-background-color: #3a3a3a; -fx-background-radius: 8; -fx-border-color: #4a4a4a; -fx-border-radius: 8; -fx-border-width: 1; -fx-padding: 12;">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" minWidth="10" prefWidth="350" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0" spacing="5">
            <padding>
                <Insets top="0" right="0" bottom="0" left="0" />
            </padding>

            <!-- Name and ID -->
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Label fx:id="id" styleClass="cell_big_label" style="-fx-alignment: center-left;" minWidth="20" prefWidth="20"/>
                <Label fx:id="name" styleClass="cell_big_label" style="-fx-font-weight: bold; -fx-alignment: center-left;" HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Tags -->
            <FlowPane fx:id="tags" hgap="5" vgap="3" />

            <!-- Personal Information -->
            <VBox spacing="6">
                <!-- Date of Birth -->
                <HBox fx:id="dobBox" spacing="8" alignment="CENTER_LEFT">
                    <Label fx:id="dob" styleClass="cell_small_label" />
                </HBox>

                <!-- Phone -->
                <HBox fx:id="phoneBox" spacing="8" alignment="CENTER_LEFT">
                    <Label fx:id="phone" styleClass="cell_small_label" />
                </HBox>

                <!-- Address -->
                <HBox fx:id="addressBox" spacing="8" alignment="TOP_LEFT">
                    <Label fx:id="address" styleClass="cell_small_label" wrapText="true" HBox.hgrow="ALWAYS" maxWidth="350.0" />
                </HBox>

                <!-- Email -->
                <HBox fx:id="emailBox" spacing="8" alignment="CENTER_LEFT">
                    <Label fx:id="email" styleClass="cell_small_label" wrapText="true" />
                </HBox>

                <!-- School -->
                <HBox fx:id="schoolBox" spacing="8" alignment="CENTER_LEFT">
                    <Label fx:id="school" styleClass="cell_small_label" />
                </HBox>

                <!-- Role -->
                <HBox fx:id="roleBox" spacing="8" alignment="CENTER_LEFT">
                    <Label fx:id="role" styleClass="cell_small_label" />
                </HBox>

                <!-- Height and Weight -->
                <HBox spacing="20" alignment="CENTER_LEFT">
                    <HBox fx:id="heightBox" spacing="8" alignment="CENTER_LEFT">
                        <Label fx:id="height" styleClass="cell_small_label" />
                    </HBox>
                    <HBox fx:id="weightBox" spacing="8" alignment="CENTER_LEFT">
                        <Label fx:id="weight" styleClass="cell_small_label" />
                    </HBox>
                </HBox>
            </VBox>
        </VBox>
    </GridPane>
</HBox>
