<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" minWidth="10" prefWidth="350" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="130" spacing="8" GridPane.columnIndex="0">
      <padding>
        <Insets top="8" right="12" bottom="8" left="12" />
      </padding>

      <!-- Name and ID -->
      <HBox spacing="5" alignment="CENTER_LEFT">
        <Label fx:id="id" styleClass="cell_big_label" />
        <Label fx:id="name" styleClass="cell_big_label" style="-fx-font-weight: bold;" />
      </HBox>

      <!-- Tags -->
      <FlowPane fx:id="tags" hgap="5" vgap="3" />

      <!-- Personal Information -->
      <VBox spacing="6">
        <!-- Date of Birth -->
        <HBox spacing="8" alignment="CENTER_LEFT">
          <Label styleClass="cell_small_label" text="ðŸ“… Date of Birth:" />
          <Label fx:id="dob" styleClass="cell_small_label" />
        </HBox>

        <!-- Phone -->
        <HBox spacing="8" alignment="CENTER_LEFT">
          <Label styleClass="cell_small_label" text="ðŸ“ž Phone:" />
          <Label fx:id="phone" styleClass="cell_small_label" />
        </HBox>

        <!-- Address -->
        <HBox spacing="8" alignment="CENTER_LEFT">
          <Label styleClass="cell_small_label" text="ðŸ  Address:" />
          <Label fx:id="address" styleClass="cell_small_label" wrapText="true" />
        </HBox>

        <!-- Email -->
        <HBox spacing="8" alignment="CENTER_LEFT">
          <Label styleClass="cell_small_label" text="âœ‰ï¸  Email:" />
          <Label fx:id="email" styleClass="cell_small_label" wrapText="true" />
        </HBox>

        <!-- School -->
        <HBox spacing="8" alignment="CENTER_LEFT">
          <Label styleClass="cell_small_label" text="ðŸ« School:" />
          <Label fx:id="school" styleClass="cell_small_label" />
        </HBox>

        <!-- Role -->
        <HBox spacing="8" alignment="CENTER_LEFT">
          <Label styleClass="cell_small_label" text="ðŸŽ¯ Role:" />
          <Label fx:id="role" styleClass="cell_small_label" />
        </HBox>

        <!-- Height and Weight -->
        <HBox spacing="20" alignment="CENTER_LEFT">
          <HBox spacing="8" alignment="CENTER_LEFT">
            <Label styleClass="cell_small_label" text="ðŸ“ Height (in cm):" />
            <Label fx:id="height" styleClass="cell_small_label" />
          </HBox>
          <HBox spacing="8" alignment="CENTER_LEFT">
            <Label styleClass="cell_small_label" text="âš–ï¸ Weight (in kg):" />
            <Label fx:id="weight" styleClass="cell_small_label" />
          </HBox>
        </HBox>
      </VBox>
    </VBox>
  </GridPane>
</HBox>



